{
  "name": "jira-project-analysis",
  "version": "0.1.1",
  "description": "Export JIRA project data as csv for analysis",
  "scripts": {
    "clean": "rimraf ./www/",
    "prewww": "npm run clean",
    "www": "mkdirp ./www/",
    "copy": "ncp ./src/client/index.html ./www/index.html --stopOnErr",
    "prebrowserify": "mkdirp ./www/js/",
    "browserify": "browserify -o ./www/js/app.js --extension=.coffee -c 'cjsx -sc' ./src/client/coffee/app.react.coffee",
    "presass": "mkdirp ./www/css/",
    "sass": "bundle exec sass ./src/client/scss/app.scss ./www/css/app.css",
    "prebuild": "npm run www",
    "build": "parallelshell 'npm run copy' 'npm run browserify' 'npm run sass'",
    "preserver": "npm run build",
    "server": "http-server ./www/",
    "lint": "coffeelint -f coffeelint.json test/ lib/ src/",
    "coverage": "multi='spec=- html-cov=coverage.html mocha-cov-reporter=-' mocha --require coffee-coverage/register -R mocha-multi --recursive ./test/",
    "pretest": "npm run lint",
    "test": "npm run coverage",
    "start": "npm run server"
  },
  "config": {
    "mocha-cov-reporter": {
      "failOnError": true,
      "threshold": 100,
      "useColors": true
    }
  },
  "keywords": [
    "jira",
    "csv",
    "time-series",
    "correlation"
  ],
  "homepage": "https://github.com/pghalliday/jira-project-analysis",
  "bugs": {
    "url": "https://github.com/pghalliday/jira-project-analysis/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Peter Halliday",
    "email": "pghalliday@gmail.com",
    "url": "http://pghalliday.com"
  },
  "bin": "./bin/jira-project-analysis",
  "repository": {
    "type": "git",
    "url": "https://github.com/pghalliday/jira-project-analysis.git"
  },
  "dependencies": {
    "JSONStream": "^0.10.0",
    "coffee-script": "^1.8.0",
    "csv-stringify": "0.0.5",
    "flux": "^2.0.1",
    "moment": "^2.9.0",
    "progress": "^1.1.8",
    "q": "^1.1.2",
    "q-io": "^1.11.6",
    "react": "^0.12.2",
    "request": "^2.51.0",
    "stream-reduce": "^1.0.3",
    "underscore": "^1.7.0"
  },
  "devDependencies": {
    "browserify": "^8.1.3",
    "chai": "^1.10.0",
    "coffee-coverage": "^0.4.4",
    "coffee-react": "^2.1.2",
    "coffee-react-transform": "^2.2.1",
    "coffee-reactify": "^2.1.0",
    "coffeelint": "^1.8.1",
    "http-server": "^0.7.4",
    "jsdom": "^3.1.0",
    "mkdirp": "^0.5.0",
    "mocha": "^2.1.0",
    "mocha-cov-reporter": "^1.1.3",
    "mocha-multi": "^0.6.0",
    "ncp": "^1.0.1",
    "parallelshell": "^1.0.4",
    "rimraf": "^2.2.8",
    "sinon": "^1.12.2",
    "sinon-chai": "^2.6.0",
    "watchify": "^2.3.0"
  }
}
